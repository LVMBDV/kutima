<%= turbo_frame_tag :new_identity_statement do %>
  <%= render(CardComponent.new) do |c| %>
    <% c.header do %>
      <%= link_to new_reset_identity_statements_path, class: 'text-gray-900 hover:text-gray-500 ml-2', data: { 'turbo-frame': :new_identity_statement } do %>
        <i class="fas fa-arrow-left fa-2x" title="Back"></i>
      <% end %>
    <% end %>
    <% c.body do %>
      <%= render partial: 'identity_statements/form',
        locals: {
          identity_statement: @identity_statement,
          submit_text: '<i class="fas fa-bullhorn"></i>&nbsp;Make a Statement'
        } %>
    <% end %>
  <% end %>
<% end %>
