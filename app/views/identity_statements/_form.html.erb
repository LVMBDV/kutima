<%= form_with model: identity_statement, id: dom_id(identity_statement), class: 'w-100 m-auto' do |f| %>
  <%= render(FormGroupComponent.new(form: f, field: :life_area, errors: identity_statement.errors)) do |c| %>
    <% c.label('Life Area') %>
    <% c.select(
         options_for_select(LifeArea::AREAS.transform_keys {|key| key.capitalize }, identity_statement.life_area),
         options: { include_blank: 'Select life area...' }
       ) %>
  <% end %>
  <%= render(FormGroupComponent.new(form: f, field: :identity, errors: identity_statement.errors)) do |c| %>
    <% c.label('I am a(n)...') %>
    <% c.text(html_options: { autocomplete: 'off', autocorrect: 'off', autocapitalize: 'off', spellcheck: false }) %>
  <% end %>
  <%= render(FormGroupComponent.new(form: f, field: :objective, errors: identity_statement.errors)) do |c| %>
    <% c.label('who...') %>
    <% c.text(html_options: { autocomplete: 'off', autocorrect: 'off', autocapitalize: 'off', spellcheck: false }) %>
  <% end %>
  <%= tag.div class: 'text-center mt-6' do %>
    <%= render(ButtonTagComponent.new) do %>
        <%= raw(submit_text) %>
    <% end %>
  <% end %>
<% end %>
