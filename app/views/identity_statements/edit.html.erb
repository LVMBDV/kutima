<%= turbo_frame_tag dom_id(@identity_statement) do %>
  <%= render(CardComponent.new) do |c| %>
    <% c.header do %>
      <%= link_to identity_statement_path(@identity_statement), class: 'text-gray-900 dark:text-white hover:text-gray-500 ml-2', data: { 'turbo-frame': dom_id(@identity_statement) } do %>
        <i class="fas fa-arrow-left fa-lg" title="Back"></i>
      <% end %>
    <% end %>
    <% c.body do %>
      <%= render partial: 'identity_statements/form',
        locals: {
          identity_statement: @identity_statement,
          submit_text: 'Save'
        } %>
    <% end %>
  <% end %>
<% end %>
