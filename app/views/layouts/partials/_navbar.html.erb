<%= tag.nav class: 'text-gray-90 dark:text-white bg-gray-50 dark:bg-gray-900 lg:flex', data: { controller: 'navbar' } do %>
  <div class="flex-shrink lg:flex-35 m-0 p-4">
    <%= link_to '#', class: 'text-xl no-underline p-4 lg:invisible focus:outline-none', data: { action: 'click->navbar#toggleMenuState' } do %>
      <i class="fas fa-bars"></i>
    <% end %>
    <%= tag.span I18n.t('layout.navbar.brand'), class: 'font-semibold text-xl' %>
  </div>
  <%= tag.div class: 'flex-grow bg-gray-50 dark:bg-gray-900 z-10 absolute lg:relative w-full lg:flex-65 md:transform-2x lg:transform-none transition-transform duration-700 lg:transition-none lg:self-center text-center lg:text-right',
              data: { target: 'navbar.menu' } do %>
    <ul>
      <% I18n.t("layout.navbar.#{ 'un' unless user_signed_in? }authenticated.links").each do |link| %>
        <li class="block lg:inline py-2 lg:py-0 px-0 lg:px-4">
          <%= link_to link_from_config(link[:path]), class: 'text-lg hover:text-gray-500', data: { 'turbo-frame': '_top' } do %>
            <i class="<%= link[:icon_class] %>"></i>&nbsp;<%= link[:name] %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
