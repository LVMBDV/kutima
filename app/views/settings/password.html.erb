<%= turbo_frame_tag :password do %>
  <%= tag.div do %>
    <p class="block mx-auto my-2 p-4 w-full md:w-3/4 text-center text-green-700 bg-green-200 border-2 border-green-700 rounded-md">
      Password changed!
    </p>
  <% end if local_assigns[:success] %>
  <div class="flex flex-wrap justify-center my-4 mx-auto">
    <%= render(ButtonToComponent.new(link: change_password_form_path, method: :get, options: { variant: :outline_blue })) do %>
      Change Password
    <% end %>
  </div>
<% end %>
